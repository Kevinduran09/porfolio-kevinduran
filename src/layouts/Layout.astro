---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="generator" content={Astro.generator} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href="https://kevinduran.vercel.app/" />
    <meta name="keywords" content="Nike" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta
      name="google-site-verification"
      content="4z9ec7fNrR2liXYGHBxIbmyx9FYd9w2wD6UrW6NM8i0"
    />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Kevin Duran | Portafolio" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://kevinduran.vercel.app/og.jpg" />

    <ClientRouter />
  </head>
  <body class="text-white w-full min-w-full">
    <div class="relative w-full">
      <div
        id="background-container"
        class="fixed inset-0 z-10 h-full bg-gradient-to-br from-black to-slate-900"
      >
        <div class="absolute inset-0 -z-10 h-full w-full bg-slate-950">
          <div
            class="absolute inset-0 bg-[radial-gradient(circle_400px_at_50%_50%,#ffffff10,transparent)] animate-pulse"
          >
          </div><div
            class="absolute inset-0 [background-image:url('data:image/svg+xml;base64,')] opacity-50"
          >
          </div><div
            class="absolute inset-0 bg-[radial-gradient(circle_600px_at_50%_50%,#4c1d9540,transparent)]"
          >
          </div>
        </div>
      </div>
    </div>
    <div class="relative z-10">
      <main>
        <slot />
      </main>
    </div>
  </body>
</html>

<script type="module" src="/scripts/animations.js"></script>
<script>
  import AOS from "aos";
  import "aos/dist/aos.css";
  AOS.init();
</script>
