---
import type { ProjectSection } from "@/data/projects";
import TechnicalSection from "./TechnicalSection.astro";

interface Props {
  sections: ProjectSection[];
}

const { sections } = Astro.props;
---

{
  sections && sections.length > 0 && (
    <section
      id="project-sections"
      class="space-y-6"
      data-aos="fade-up"
      data-aos-delay="300"
      data-aos-duration="900"
      data-aos-once="true"
    >
      <h2
        class="text-2xl font-bold mb-4"
        data-aos="fade-right"
        data-aos-delay="450"
        data-aos-duration="800"
        data-aos-once="true"
      >
        Aspectos TÃ©cnicos
      </h2>

      {sections.map((section, index) => (
        <div
          id={`section-${index}`}
          data-aos="fade-left"
          data-aos-delay={600 + index * 180}
          data-aos-duration="900"
          data-aos-once="true"
          class="will-change-transform"
        >
          <TechnicalSection section={section} />
        </div>
      ))}
    </section>
  )
}
