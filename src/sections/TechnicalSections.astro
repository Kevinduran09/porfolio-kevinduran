---
import type { ProjectSection } from "@/data/projects";
import TechnicalSection from "./TechnicalSection.astro";
import AnimationDiv from "@/components/animations/AnimationDiv.astro";

interface Props {
  sections: ProjectSection[];
}

const { sections } = Astro.props;
---

{
  sections && sections.length > 0 && (
    <div class="space-y-6 opacity-0 translate-y-10 animate-[slideUp_1s_ease-out_0.7s_forwards]">
      <section>
        <h2 class="text-2xl font-bold mb-4">Aspectos TÃ©cnicos</h2>
        {sections.map((section, index) => (
          <div 
            class="opacity-0 -translate-x-10"
            style={`animation: slideIn 0.7s ease-out ${0.8 + index * 0.2}s forwards;`}
          >
            <TechnicalSection section={section} />
          </div>
        ))}
      </section>
    </div>
  )
} 

<style>
  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateX(-40px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>