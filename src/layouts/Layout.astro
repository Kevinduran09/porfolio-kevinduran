---
import "../styles/global.css";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="w-full min-w-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <link rel="stylesheet" href="/src/styles/globals.css" />
  </head>
  <body class="text-white w-full min-w-full">
    <div class="relative w-full">
      <div
        id="background-container"
        class="fixed inset-0 z-10 h-full bg-gradient-to-br from-black to-slate-900"
      >
        <div class="absolute inset-0 -z-10 h-full w-full bg-slate-950">
          <div
            class="absolute inset-0 bg-[radial-gradient(circle_400px_at_50%_50%,#ffffff10,transparent)] animate-pulse"
          >
          </div><div
            class="absolute inset-0 [background-image:url('data:image/svg+xml;base64,')] opacity-50"
          >
          </div><div
            class="absolute inset-0 bg-[radial-gradient(circle_600px_at_50%_50%,#4c1d9540,transparent)]"
          >
          </div>
        </div>
      </div>

      <div class="relative z-10">
        <main>
          <slot />
        </main>
      </div>
    </div>
  </body>
</html>

<style></style>
