---
// Props
const { title, items = [] } = Astro.props;
---

<span class="flex items-center gap-2 mt-6 text-gray-300">
    <slot />
    {title}
</span>
<div class="flex gap-3 py-4 ">
    {
        items.map((item: string, index: number) => (
            <div class="flex items-center gap-2 px-3 py-1.5 bg-gray-700 rounded-full">
                <span class="text-base font-medium text-gray-100">{item}</span>
            </div>
        ))
    }
</div>
