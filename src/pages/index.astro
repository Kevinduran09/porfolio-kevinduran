---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Projects from "../components/Projects.astro";
import Experience from "../components/Experience.astro";
import AboutMe from "../components/AboutMe.astro";
import Contact from "../components/Contact.astro";
import "../styles/global.css";
---

<Layout>
  <section class="min-h-screen flex items-center justify-center w-full">
    <Hero />
  </section>
  <section id="projects" class="min-h-screen w-full">
    <Projects />
  </section>
  <section id="aboutme" class="min-h-screen w-full">
    <AboutMe />
  </section>
  <section id="experience" class="min-h-screen flex items-center justify-center w-full">
    <Experience />
  </section>
  <section class="">
    <Contact />
  </section>
</Layout>
