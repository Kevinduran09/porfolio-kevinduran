---
// Componente Hero

import Github from "@/components/icons/Github.astro";
import LinkedIn from "@/components/icons/LinkedIn.astro";
import Mail from "@/components/icons/Gmail.astro";
import { Image } from "astro:assets";
import SectionLayout from "@/layouts/SectionLayout.astro";

const Personal_Information = {
  name: "Kevin Durán",
  linkedin:
    "https://www.linkedin.com/in/kevin-dur%C3%A1n-mart%C3%ADnez-1b6868151/",
  email: "kduran.091001@gmail.com",
  titles: [
    "Ingeniero de Software",
    "Desarrollador Full Stack",
    "Apasionado por la tecnología",
  ],
};
---

<SectionLayout id="hero" class="flex md:min-h-screen mt-16 md:mt-auto">
  <div
    class="flex flex-col gap-8 lg:gap-12 xl:gap-0 lg:flex-row items-center justify-center px-3 md:px-0"
  >
    <div
      class="w-full max-w-xs sm:max-w-sm md:max-w-md lg:max-w-lg lg:w-1/2 lg:order-last order-first flex justify-center lg:justify-end"
      data-aos="zoom-in"
      data-aos-delay="300"
      data-aos-duration="1400"
      data-aos-easing="ease-out-cubic"
      data-aos-once="true"
      id="hero-img"
    >
      <Image
        src="/kevinduran-hero-neo.webp"
        alt="Kevin Durán"
        width={250}
        height={250}
        class="object-cover rounded-full w-full h-auto aspect-square"
      />
    </div>

    <!-- Texto -->
    <div class="lg:w-1/2 lg:order-first order-last" id="hero-text-content">
      <div class="text-center md:text-center lg:text-left w-full">
        <!-- Hola soy -->
        <p
          class="mb-3 text-3xl leading-none text-fuchsia-600"
          data-aos="fade-right"
          data-aos-delay="400"
          data-aos-duration="900"
        >
          Hola soy
        </p>

        <!-- Nombre -->
        <h1
          class="mb-4 text-4xl font-title font-black leading-none md:text-5xl lg:text-5xl xl:text-6xl 2xl:text-7xl text-white whitespace-nowrap"
          style="line-height: 0.95;"
          data-aos="fade-right"
          data-aos-delay="650"
          data-aos-duration="1000"
        >
          {Personal_Information.name}
        </h1>

        <!-- Título -->
        <div
          class="mb-4 mt-2 lg:mt-0 text-2xl md:text-3xl lg:text-4xl xl:text-5xl text-fuchsia-600 font-semibold"
          data-aos="fade-right"
          data-aos-delay="900"
          data-aos-duration="1000"
        >
          {Personal_Information.titles[0]}
        </div>

        <!-- Descripción -->
        <p
          class="mb-6 text-lg font-normal text-grisclaro2 md:text-base 2xl:text-xl [text-wrap:balance]"
          data-aos="fade-right"
          data-aos-delay="1100"
          data-aos-duration="1000"
        >
          Apasionado por los desafíos que impulsan mi crecimiento. Comprometido
          con el desarrollo de soluciones escalables y de alta calidad.
        </p>
      </div>

      <!-- Botones -->
      <div
        class="flex flex-row text-base items-center gap-2 md:gap-3
    justify-center lg:justify-start"
        data-aos="fade-up"
        data-aos-delay="1200"
        data-aos-duration="900"
        data-aos-offset="0"
        data-aos-once="true"
      >
        <a
          href="https://github.com/Kevinduran09"
          class="bg-gray-800 hover:bg-gray-700 flex items-center gap-2 px-2 md:px-4 py-2 rounded transition-colors"
        >
          <Github class="size-5 md:size-6" />
          <span>GitHub</span>
        </a>

        <a
          href={Personal_Information.linkedin}
          class="bg-gray-800 hover:bg-gray-700 flex items-center gap-2 px-2 md:px-4 py-2 rounded transition-colors"
        >
          <LinkedIn class="size-5 md:size-6" />
          <span>LinkedIn</span>
        </a>

        <a
          href={`mailto:${Personal_Information.email}`}
          class="bg-fuchsia-700 hover:bg-fuchsia-600 flex items-center gap-2 px-2 md:px-4 py-2 rounded transition-colors"
        >
          <span>Contactame</span>
          <Mail class="size-5 md:size-6" />
        </a>
      </div>
    </div>
  </div>
</SectionLayout>
